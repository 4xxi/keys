{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Groups list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Private</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td><a href="{{ path('group_show', { 'id': group.id }) }}">{{ group.id }}</a></td>
                <td>{% if group.private %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('group_show', { 'id': group.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('group_edit', { 'id': group.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('group_new') }}">Create a new group</a>
        </li>
    </ul>
{% endblock %}
